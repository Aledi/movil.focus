<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_layout_margin_bottom"
    android:layout_marginTop="@dimen/card_layout_margin_top"
    app:cardBackgroundColor="@color/white"
    app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/txt_survey_label"
            style="@style/TextViewLabel"
            android:layout_width="102dp"
            android:layout_height="@dimen/text_view_height_mini"
            android:text="@string/history_survey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_title"
            style="@style/TextViewTitle"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_view_height_mini"
            app:layout_constraintLeft_toRightOf="@id/txt_survey_label"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_answered_label"
            style="@style/TextViewLabel"
            android:layout_width="102dp"
            android:layout_height="@dimen/text_view_height_mini"
            android:text="@string/history_answered"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_survey_label" />

        <TextView
            android:id="@+id/txt_answered"
            style="@style/TextView"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_view_height_mini"
            android:textColor="@color/blueDark"
            app:layout_constraintLeft_toRightOf="@id/txt_answered_label"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_survey_label" />

        <TextView
            android:id="@+id/txt_start_date_label"
            style="@style/TextViewLabel"
            android:layout_width="102dp"
            android:layout_height="@dimen/text_view_height_mini"
            android:text="@string/history_start_date"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_answered_label" />

        <TextView
            android:id="@+id/txt_start_date"
            style="@style/TextView"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_view_height_mini"
            app:layout_constraintLeft_toRightOf="@id/txt_start_date_label"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_answered_label" />

        <TextView
            android:id="@+id/txt_end_date_label"
            style="@style/TextViewLabel"
            android:layout_width="102dp"
            android:layout_height="@dimen/text_view_height_mini"
            android:text="@string/history_end_date"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_start_date_label" />

        <TextView
            android:id="@+id/txt_end_date"
            style="@style/TextView"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_view_height_mini"
            app:layout_constraintLeft_toRightOf="@id/txt_end_date_label"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_start_date_label" />

        <TextView
            android:id="@+id/txt_panel_label"
            style="@style/TextViewLabel"
            android:layout_width="102dp"
            android:layout_height="@dimen/text_view_height_mini"
            android:text="@string/history_panel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_end_date_label" />

        <TextView
            android:id="@+id/txt_panel"
            style="@style/TextView"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_view_height_mini"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/txt_panel_label"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_end_date_label" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
